<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_doctor"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/anhbacsi"
                tools:srcCompat="@drawable/anhbacsi" />

            <LinearLayout
                android:layout_width="236dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Nguyễn Văn A"
                    android:textColor="#5F73F6"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/category_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Nha Sĩ"
                    android:textColor="#5F73F6" />

                <TextView
                    android:id="@+id/description_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginStart="10dp"
                    android:text="Làm việc tại bệnh viện ABC"
                    android:textColor="#5F73F6" />

                <TextView
                    android:id="@+id/textView4"

                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginStart="10dp"
                    android:text="Làm việc tại bệnh viện ABC"
                    android:textColor="#5F73F6" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginStart="10dp"
                    android:text="Làm việc tại bệnh viện ABC"
                    android:textColor="#5F73F6" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000DFF">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/review_doctor"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        tools:context=".MainActiviti.ReviewActivity">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="300dp"
                android:layout_height="86dp"
                android:hint="Write your revews"></EditText>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="86dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button"
                android:src="@drawable/sent3">

            </ImageButton>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>