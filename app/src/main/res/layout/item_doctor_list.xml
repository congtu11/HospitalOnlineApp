<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_dt"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:background="#e3f2fd"
        android:elevation="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_doctor"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/anhbacsi" />

            <LinearLayout
                android:layout_width="236dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Nguyễn Văn A"
                    android:textColor="#5F73F6"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/category_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Nha Sĩ"
                    android:textColor="#5F73F6" />

                <TextView
                    android:id="@+id/description_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Làm việc tại bệnh viện ABC"
                    android:textColor="#5F73F6" />



            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>