<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_medicine"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#e3f2fd"
        android:elevation="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:cardCornerRadius="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_medicine"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                app:srcCompat="@drawable/anhbacsi"
                tools:srcCompat="@drawable/anhbacsi"></ImageView>

            <LinearLayout

                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_medicine"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:text="Tên thuốc"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/tv_type_medicine"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:text="phân loại thuốc"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/tv_review_medicine"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Thành phần thuốc"
                    android:textSize="15sp"></TextView>

                <Button
                    android:id="@+id/btn_addtocart"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_add_shopping_cart_black_24dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
